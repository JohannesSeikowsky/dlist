<div class="row">
  <div class="done-container col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    
    <!-- 1.after signup -->
    <% if session[:just_signed_up] %>
      <div id="after-signup-pointer"> Go ahead and write down your DoneList below. </div>
    <% end %>

    <!-- 2.form -->
    <h3>What have you accomplished so far?</h3>
    <%= form_for([@user, @done]) do |f| %>
      <% if @done.errors.any? %> 
        <p> Parameters insufficient. Try again. </p> 
      <% end %>
      <%= f.text_area :content, placeholder: "write here." %> <br>
      <%= f.submit "âˆš done.", class: "btn btn-sm" %>
    <% end %> <br> 

    <!-- 3.text -->
    <div class="text">"This is your DoneList. You will receive a weekly email reminder including it, to remind you how many things you have already accomplished."</div> <hr> 

    <!-- 4.dones -->
    <% @users_dones.each do |d| %>
      <% if !d.content.blank? %> 
        <div class="done"> 
          <p> <%= d.content %> </p> <%= link_to "edit", edit_user_done_path(@user, d) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


<script type="text/javascript">
  setTimeout(function () {
      document.getElementById('after-signup-pointer').style.display='none';
  }, 10500);
</script>