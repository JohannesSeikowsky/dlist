<h4>Sign up and have a go :)</h4>
<%= form_for @user do |f| %> 
  <%= f.text_field :name, placeholder: "Joe Appleyard", class: "form-control"  %>
  <%= f.text_field :email, placeholder: "appleyard@gmail.com", class: "form-control" %>
  <%= f.password_field :password, placeholder: "password", class: "form-control"  %>
  <%= f.password_field :password_confirmation, placeholder: "password confirm", class: "form-control" %>
  <div style="text-align: center;">
    <%= f.submit "Sign up", class: "btn btn-md btn-warning" %>
  </div>
<% end %>